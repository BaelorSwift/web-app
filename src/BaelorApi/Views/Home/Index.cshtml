@{
	ViewBag.Title = "Home :: Baelor.io";
}

@section socialmeta {
	<!-- Generic -->
	<meta itemprop="name" content="Home | Baelor Api">
	<meta itemprop="description" content="A fully RESTful, and open source, API for Taylor Swift. The most important musician of our generation. And absolute bae.">
	<meta itemprop="image" content="~/images/baelor-cover.jpg">
	<meta name="description" content="A fully RESTful, and open source, API for Taylor Swift. The most important musician of our generation. And absolute bae." />

	<!-- Twitter Card data -->
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:site" content="&#64;0xdeafcafe">
	<meta name="twitter:title" content="Home | Baelor Api">
	<meta name="twitter:description" content="A fully RESTful, and open source, API for Taylor Swift. The most important musician of our generation. And absolute bae.">
	<meta name="twitter:image:src" content="~/images/baelor-cover.jpg">

	<!-- Open Graph data -->
	<meta property="og:title" content="Home | Baelor Api" />
	<meta property="og:type" content="website" />
	<meta property="og:url" content="http://www.baelor.io/" />
	<meta property="og:image" content="~/images/baelor-cover.jpg" />
	<meta property="og:description" content="A fully RESTful, and open source, API for Taylor Swift. The most important musician of our generation. And absolute bae." />
	<meta property="og:site_name" content="Baelor Api" />
}

<section id="baelor-splash-section">
	<div class="splash-box">
		<div class="mask">
			<div class="content">
				<h1>baelor.io</h1>
				<h2>a fully <strong>RESTful</strong> api for Taylor Swift</h2>
			</div>
		</div>
		<div class="swag-xox">
			<video class="hidden-xs" src="~/video/baelor-home.mp4" loop autoplay poster="~/images/baelor-cover.jpg"></video>
		</div>
	</div>
</section>

<section id="top-banner-section" class="baelor-info-section">
	<div class="api-demo row">
		<div class="col-md-8 col-md-offset-2">
			<h3>
				api example
			</h3>

			<div class="desktop-api-demo hidden-xs">
				<div class="input-group">
					<span class="input-group-addon">https://baelor.io/api/v0/</span>
					<input id="desktop-api-preview-path" type="text" class="api-preview-path form-control" placeholder="path" value="songs/style" aria-describedby="basic-addon1">
					<span class="input-group-btn">
						<button id="desktop-get-api-preview" class="get-api-preview btn btn-success" type="button">Shake it off!</button>
					</span>
				</div>
				<p>
					<sup>
						*
					</sup>
					this example uses a demo <code>api_key</code>, that can only be used on the songs/{slug}, and albums/{slug} endpoints.
				</p>
			</div>
			<div class="mobile-api-demo visible-xs">
				<div>
					<span id="api-path-prefix" class="input-group-addon">https://baelor.io/api/v0/</span>
				</div>
				<div>
					<input id="mobile-api-preview-path" type="text" class="api-preview-path form-control" placeholder="path" value="songs/style" aria-describedby="basic-addon1">
				</div>
				<div id="api-request-button">
					<span>
						<button id="mobile-get-api-preview" class="get-api-preview btn btn-success" type="button">Shake it off!</button>
					</span>
				</div>
				<p>
					<sup>
						*
					</sup>
					this example uses a demo <code>api_key</code>, that can only be used on the songs/{slug}, and albums/{slug} endpoints.
				</p>
			</div>
			
			<div class="loader">
				<div class="loader-pulse"></div>
			</div>

			<div id="api-demo-response">
				<h4 id="api-demo-response-header"></h4>
				<pre id="json-preview-pre"><code id="json-preview" class="json"></code></pre>
			</div>
		</div>
	</div>
</section>

@section scripts {
	<script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/highlight.min.js"></script>
	<script>
		hljs.configure({
			tabReplace: '    ',
		});
	</script>
	<script src="~/js/home.js"></script>
}